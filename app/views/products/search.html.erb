<%if @search!='' || @filter != ''%>
<h1><%=t('search.title')%> <%= @search %>
  <%if @filter != ''%>
      <%=t('search.price')%> <%=@filter%>$
      <%end%>
</h1>
  <h5><%=t('search.count')%>:
  <%= @count %></h5>
  <%end%>
<div class="row">
  <%if @products.count>0%>
  <%=@products.each do |product|%>
    <%= render ProductComponent.new(product: product)%>
  <%end%>
  <%end%>
</div>
<%=paginate @products%>
